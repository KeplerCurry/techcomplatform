<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.lrn517.techcomplatform.activity.AddTPZDetailActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/add_tpzdetail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"/>

            <EditText
                android:id="@+id/add_tpzdetail_tpzdtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="TPZDTitle"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="文章主体"/>

            <EditText
                android:id="@+id/add_tpzdetail_tpzdcontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="tpzdcontent"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="需付费"/>

                <CheckBox
                    android:id="@+id/add_tpzdetail_free_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/add_tpzdetail_price_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="价格"/>

                <EditText
                    android:id="@+id/add_tpzdetail_price"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:hint="请输入价格"/>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Button
            android:id="@+id/add_tpzdetail_send"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:text="发表"/>

    </LinearLayout>

</LinearLayout>
