<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/chat_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/chat_createtime_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2018-4-4 18:20:20"
            android:gravity="center"/>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/ic_launcher"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/chat_ualiase_left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ualiase"
                    android:gravity="center|left"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/chat_left">

                    <TextView
                        android:id="@+id/chat_text_left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:text="XXXXXXXXXXXXXX" />

                </LinearLayout>

                <TextView
                    android:id="@+id/chat_isread_left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="已读|未读"
                    android:gravity="center|left"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/chat_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/chat_createtime_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2018-4-4 18:20:20"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/chat_ualiase_right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ualiase"
                    android:gravity="center|right"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/chat_right"
                    android:layout_gravity="right">

                    <TextView
                        android:id="@+id/chat_text_right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="XXXXXXXXXXXXXX"
                        android:gravity="center|right"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/chat_isread_right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="已读|未读"
                    android:gravity="center|right"/>

            </LinearLayout>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/ic_launcher"/>


        </LinearLayout>

    </LinearLayout>


</FrameLayout>
