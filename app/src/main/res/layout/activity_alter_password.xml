<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.lrn517.techcomplatform.activity.AlterPasswordActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/alter_password_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.Toolbar>

    <EditText
        android:id="@+id/alter_password_telephone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入手机号"/>

    <EditText
        android:id="@+id/alter_password_oldpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入原密码"/>

    <EditText
        android:id="@+id/alter_password_newpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入新密码"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/alter_password_identifying_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="请输入验证码"/>

        <Button
            android:id="@+id/alter_password_get_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="获取验证码"/>

    </LinearLayout>

    <Button
        android:id="@+id/alter_password_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确定修改"/>

</LinearLayout>
