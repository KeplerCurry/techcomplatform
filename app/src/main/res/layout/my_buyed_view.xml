<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <LinearLayout
        android:id="@+id/my_buyed_td"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/my_buyed_td_tdtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tdtitle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格"/>

            <TextView
                android:id="@+id/my_buyed_td_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购买时间"/>

            <TextView
                android:id="@+id/my_buyed_td_rtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018-4-4"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_buyed_tpzd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/my_buyed_tpzd_tpzdtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tpzdtitle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格"/>

            <TextView
                android:id="@+id/my_buyed_tpzd_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购买时间"/>

            <TextView
                android:id="@+id/my_buyed_tpzd_rtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018-4-4"/>

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>
